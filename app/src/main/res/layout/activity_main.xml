<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:text="测试 SharePreference"
            android:textAllCaps="false"
            android:onClick="testSharePreference"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:text="测试 SQLite 数据库"
            android:textAllCaps="false"
            android:onClick="testSQLite"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:text="测试 objectbox 数据库框架"
            android:textAllCaps="false"
            android:onClick="testObjectBox"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:text="测试文件读写"
            android:textAllCaps="false"
            android:onClick="testWriteReadFile"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:text="测试Intent数据传递"
            android:textAllCaps="false"
            android:onClick="testIntentBundle"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:text="测试 FileProvider"
            android:textAllCaps="false"
            android:onClick="testFileProvider"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:text="测试列表适配器"
            android:textAllCaps="false"
            android:onClick="testListAdapter"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:text="测试网格适配器"
            android:textAllCaps="false"
            android:onClick="testGridAdapter"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="1"/>
    </LinearLayout>
    </ScrollView>
    <include layout="@layout/include_footer" />
</LinearLayout>